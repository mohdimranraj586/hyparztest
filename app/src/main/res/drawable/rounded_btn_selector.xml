<?xml version="1.0" encoding="utf-8"?>
<selector xmlns:android="http://schemas.android.com/apk/res/android">

    <item android:color="@color/white" android:state_pressed="true">
        <shape>
            <solid android:color="@color/orange_red" />
            <stroke android:width="1dp" android:color="@color/orange_red" />

            <!-- #E36C1A -->
            <corners android:radius="10dp" />
        </shape>
    </item>
    <item android:color="@color/white" android:state_focused="true">
        <shape xmlns:android="http://schemas.android.com/apk/res/android">
            <solid android:color="@color/orange_red" />
            <stroke android:width="1dp" android:color="@color/orange_red" />

            <corners android:radius="10dp" />
        </shape>
    </item>
    <item android:color="@color/orange_red" android:state_focused="false">
        <shape xmlns:android="http://schemas.android.com/apk/res/android">

            <!-- Background Color -->
            <solid android:color="@color/white" />

            <corners android:radius="10dp"></corners>
            <!-- Border Color -->
            <stroke android:width="2dp" android:color="@color/orange_red" />

        </shape>
    </item>
    <item android:color="@color/orange_red" android:state_pressed="false">
        <shape xmlns:android="http://schemas.android.com/apk/res/android">

            <!-- Background Color -->
            <solid android:color="@color/white" />

            <corners android:radius="10dp"></corners>
            <!-- Border Color -->
            <stroke android:width="2dp" android:color="@color/orange_red" />

        </shape>
    </item>

</selector>